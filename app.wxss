  margin-left: 20rpx;
  margin-right: 0;
}
.l-chat-item ._state button{
  border:none;
  padding: 5rpx;
  background: transparent;
}
.l-chat-item ._state button::after{
  display: none;
}
.l-chat-item._self{
  flex-direction: row-reverse;
}
.l-chat-item._self ._who{
  margin-left: 20rpx;
  margin-right: 0;
}
.l-chat-item._self ._msg{
