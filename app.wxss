.l-chat-record{
  width: 100%;
  box-sizing: border-box;
  padding:0 30rpx;
}
.l-chat-record ._tip{
  font-size: 10pt; 
  color: #999; 
  line-height: 1.4;
  margin-bottom: 30rpx;
}
.l-chat-item{
  display: flex;
   align-items: center;
  margin-bottom: 30rpx;
}
.l-chat-item ._who{
  display: none;
  margin-left: 0;
  margin-right: 20rpx;
  align-self: flex-start;
}
.l-chat-item ._who image{
  display: block;
  width: 80rpx;
  height: 80rpx;
  border: 1rpx soldi #ccc;
}
.l-chat-item ._who text{
  font-size: 11px;
  color: #999;
}
.l-chat-item ._msg{
  border-radius: 30rpx 30rpx 30rpx 0;
  padding: 20rpx 30rpx;
  background: #fff;
  max-width: 70%;
  word-break: break-all;
}
