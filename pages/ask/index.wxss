/* 医生推荐 */
.l-doctor-recommend{
  border-radius: 30rpx 30rpx 30rpx 0;
  background: #fff;
  overflow: hidden;
  margin: 30rpx 0;
}
.l-doctor-recommend ._hd{
  background: #27adf6;
  color: #fff;
  padding: 20rpx 30rpx;
}
.l-doctor-recommend ._item{
  padding: 30rpx;
  border-bottom: 1rpx solid #efefef;
}
.l-doctor-recommend ._item::last-child{
  border-bottom: none;
}
